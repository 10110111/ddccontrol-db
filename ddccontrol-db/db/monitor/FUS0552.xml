<?xml version="1.0"?>
<monitor name="Fujitsu Siemens P19-2" init="standard">
	<controls>
		<!-- 0x02: +/1/2 -->
		<!-- 0x04: +/0/1 -->
		<control id="defaults" address="0x04"/>
		<!-- 0x05: +/0/1 -->
		<!-- 0x08: +/0/1 -->
		<control id="defaultcolor" address="0x08"/>
		<!-- 0x0b: +/100/0 -->
		<!-- 0x0c: +/45/63  temperature -->

		<control id="brightness" address="0x10"/>
		<control id="contrast" address="0x12"/>
		<!-- 0x14: +/6/13 temperature -->
		<control id="colorpreset" address="0x14">
			<value id="5000k"  value="4"/>
			<value id="6500k"  value="1"/>
			<value id="7500k"  value="6"/>
			<value id="8200k"  value="7"/>
			<value id="9300k"  value="8"/>
			<value id="native" value="2"/>
		</control>
		<!-- 0x60: +/3/3 -->
		<control id="inputsource" type="list" address="0x60">
			<value id="analog" value="1"/>
			<value id="digital" value="3"/>
		</control>
		<control id="audiospeakervolume" address="0x62"/>
		<!-- 0x6c Service: +/50/100 Red Video Black Level -->
		<!-- 0x6e Service: +/50/100 Green Video Black Level -->
		<!-- 0x70 Service: +/50/100 Blue Video Black Level -->

		<!-- 0x94: +/1/3 [???] audio mute(0)/unmute(1) -->
		<control id="mute" type="list" address="0x94">
			<value id="mute" value="0"/>
			<value id="normal" value="1"/>
		</control>
		<!-- 0xaa: +/1/4 [???] osd orientation norm(1)/vert(2) -->
		<control id="osdrotation" type="list" address="0xaa">
			<value id="no" value="1"/>
			<value id="yes" value="2"/>
		</control>
		<!-- 0xac: +/6390/0 -->
		<!-- 0xae: +/5990/0 -->
		<!-- 0xb2: +/1/0 -->
		<!-- 0xb6: +/3/0 -->
		<!-- 0xc0: +/61/0 -->
		<!-- 0xc6: +/69/0 -->
		<!-- 0xc8: +/5/0 -->
		<!-- 0xc9: +/19714/0 -->
		<!-- 0xca: +/2/2 -->

		<!-- 0xcc: +/4/12 osd language de(4) en(2) -->
		<control id="language" type="list" address="0xcc">
			<value id="english" value="2"/>
			<value id="french" value="3"/>
			<value id="deutsch" value="4"/>
			<value id="italian" value="5"/>
			<value id="russian" value="9"/>
			<value id="spanish" value="10"/>
			<value id="dutch" value="11"/>
			<value id="swedish" value="12"/>
		</control>

		<!-- 0xd6: +/1/0 possibly dpms -->
		<control id="dpms" type="list" address="0xd6">
			<value id="on" value="1"/>
			<value id="standby" value="2"/>
		</control>
		<!-- 0xdf: +/512/0 -->
		<!-- 0xf6: +/1/1 resolution hint on(1) off(0) -->
		<control id="resolutionnotifier" type="list" address="0xf6">
			<value id="on" value="1"/>
			<value id="off" value="0"/>
		</control>
	</controls>
</monitor>
