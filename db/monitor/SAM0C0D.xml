<?xml version="1.0"?>
<monitor name="Samsung S22E391H (VGA)">
    <!-- Actually, the monitor itself returns empty string of capabilities (not even "vcp()", simply zero length string. These are based on the controls probe. Some are excluded because testing reveals them as not affecting anything and not affected by changes via OSD (anything that I tested anyway). In particular, excluded are: E2 F0 62 02 54 6C 6E 70 -->
    <caps add="(vcp(04 05 06 08 0E 10 12 14 16 18 1a 1E 20 30 3E 60 87 AA B6 C6 C8 C9 CA CC D6 DB DC DF E0 E1 E4 E5 E8 E9 EA EB EC ED EE EF F2 F3 F5 F6 F7 FE))"/>
    <controls>
        <control id="colorpreset" type="list" address="0xe0">
            <value id="normal" value="2"/>
            <value id="warm2"  value="3"/>
            <value id="warm1"  value="4"/>
            <value id="cool1"  value="7"/>
            <value id="cool2"  value="8"/>
            <value id="custom" value="11"/>
        </control>
        <control id="inputsource" type="list" address="0x60">
            <value id="analog"  value="1"/>
            <value id="digital" value="5"/>
        </control>
        <control id="language" type="list" address="0xcc">
            <value id="chinese"     value="1"/>
            <value id="english"     value="2"/>
            <value id="french"      value="3"/>
            <value id="german"      value="4"/>
            <value id="italian"     value="5"/>
            <value id="japanese"    value="6"/>
            <value id="korean"      value="7"/>
            <value id="portuguese"  value="8"/>
            <value id="russian"     value="9"/>
            <value id="spanish"     value="10"/>
            <value id="swedish"     value="11"/>
            <value id="turkish"     value="12"/>
            <value id="hungarian"   value="26"/>
            <value id="polish"      value="30"/>
        </control>
        <control id="magicbright" type="list" address="0xdc">
            <value id="standard" value="1"/>
            <value id="movie" value="2"/>
            <value id="custom" value="6"/>
            <value id="dynamic" value="240"/>
        </control>
    </controls>
    <include file="SAMlcd"/>
</monitor>
